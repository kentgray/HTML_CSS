    <script>

    String.prototype.format = function () {
      var args = arguments;
      return this.replace(/{(\d+)(:(c|f)(\d))?}/g, function (match, number) {
        if (arguments[2] === undefined)
          return args[number] === undefined ? '{' + number + '}' : args[number]
        ;
        var ch = arguments[3].charCodeAt(0);
        var n = Number(arguments[4]);
        if (ch == 102)
          return Number(args[number]).toFixed(index);

        return args[number].toLocaleString("en-US", {
            style: "currency",
            currency: "USD",
            minimumFractionDigits: n,
            maximumFractionDigits: n
        });
      });
    };

    function createTable(str, sep) {
      if (sep===undefined) sep=',';
      var s = "<table>";
      var data = str.split("\n");
      var aligns = ['"center"', '"right"'];
      for (var i = 0; i < data.length; i++) {
        var data2 = data[i].split(sep);
        s += "<tr>";
        for (var j = 0; j < data2.length; j++) {
          s += "<td";
          if (data2[j].charAt(0) == '%') {
            var ch = data2[j].charAt(1);
            s += " align=" + aligns[ch];
            j++;
          }
          s += ">" + data2[j] + "</td>";
        }
        s += "</tr>";
      }
      return s + "</table>";
        }

        var employees = "Name,Reg,OT,Total";
        function add() {
            var name = document.getElementById('name').value;
            var wage = document.getElementById('wage').value;
            var hour = document.getElementById('hour').value;

            // act like there is not ot but we still are going to do the variables

            var reg = hour * wage;
            var ot = 0;
        
            if (hour > 40) {
                reg = 40 * wage;
                ot = (hour - 40) * 1.5 * wage;
            } else {
                reg = 40 * wage;
            }
            var total = reg + ot;

            employees += "\n" + name + ' , '
                + reg + ' , ' + ot + ',%1,$' + total.toFixed(2);
            
            var output = document.getElementById("output");
            output.innerHTML = "<big>Employees</big>" +
                createTable(employees);
        }

        function init() {
            var hdg = document.getElementById("hdg");
            hdg.innerHTML = "<h1>Program 2</h1>";
            var s = 'Name,<input type="text" id="name"/>' +
                '\n<small>Hourly<br> Wage</small>,<input type="text" id="wage"' +
                '\nHours,<input type="text" id="hour"' +
                '\n,<input type="button" value="Add" ' +
                'onclick="add()"/>';
            var input = document.getElementById("input");
            input.innerHTML = "<h2>Enter Name, Wage <br>& Hours</h2>" +
                createTable(s);
}
    </script>
    <style>

        body {
